{
  "name": "huge-nx-conventions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/conventions/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/conventions",
        "main": "packages/conventions/src/index.ts",
        "tsConfig": "packages/conventions/tsconfig.lib.json",
        "assets": [
          "README.md",
          {
            "input": "./packages/conventions/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/conventions/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/conventions",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/conventions",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "./packages/samples",
            "glob": "**/*.ts",
            "output": "./samples"
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
